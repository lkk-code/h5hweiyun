// 中文字符判断
    function getStrLength(str) {
        var len = str.length;
        var reLen = 0;
        for (var i = 0; i < len; i++) {
            if (str.charCodeAt(i) < 0 || str.charCodeAt(i) > 200) {
                // 全角
                reLen += 1;
            } else {
                reLen++;
            }
        }
        return reLen;
    }


