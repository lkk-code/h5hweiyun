.barrageBg {
  width: 8192px;
  height: 1152px;
  background: url("../img/barrage/bg.jpg");
  background-size: 100% 100%;
  //overflow: hidden;
  .animateBox {
    width: 5112px;
    overflow: hidden;
    top: 0;
    left: 1540px;
    .lineL {
      width: 4px;
      transform: rotate(-45deg) translate(0,0);
      &.lineL1 {
        top: -200px;
        left: 0;
        height: 200px;
        background: #dd0278;
        animation: lineLeft 3s linear infinite;
      }
      &.lineL2 {
        top: 100px;
        left: -200px;
        height: 200px;
        background: #08c295;
        animation: lineLeft1 3s linear infinite;
        animation-delay: 0.8s;
      }
      &.lineL3 {
        top: -200px;
        left: 700px;
        height: 160px;
        background: #5f5029;
        animation: lineLeft2 3s linear infinite;
        animation-delay: 0.4s;
      }
      &.lineL4 {
        top: -200px;
        left: -100px;
        height: 200px;
        background: #b2664d;
        animation: lineLeft3 3s linear infinite;
        animation-delay: 1.4s;
      }
    }

    .lineR {
      width: 4px;
      transform: rotate(45deg) translate(0,0);
      &.lineR1 {
        top: -200px;
        right: 0;
        height: 200px;
        background: #dd0278;
        animation: lineRight 3s linear infinite;
        animation-delay: 0.8s;
      }
      &.lineR2 {
        top: 100px;
        right: -200px;
        height: 200px;
        background: #08c295;
        animation: lineRight1 3s linear infinite;
        animation-delay: 1.4s;
      }
      &.lineR3 {
        top: -200px;
        right: 700px;
        height: 160px;
        background: #5f5029;
        animation: lineRight2 3s linear infinite;
        animation-delay: 0.4s;
      }
      &.lineR4 {
        top: -200px;
        right: -100px;
        height: 200px;
        background: #b2664d;
        animation: lineRight3 3s linear infinite;
      }
    }
  }
  .code {
    width: 1540px;
    padding-top: 148px;
    top: 0;
    z-index: 1000;
    &.code1 {
      left: 0;
    }
    &.code2 {
      right: 0;
    }
    p {
      width: 406px;
      margin-left: 500px;
      margin-top: 40px;
      font-size: 48px;
      color: #b77ae1;
    }
    .codeBox {
      width: 648px;
      height: 643px;
      margin: 0 auto;
      background: url("../img/barrage/code1.png");
      padding: 238px 0 0 78px;
      img {
        width: 360px;
        height: 360px;
      }
    }
  }
  .barrageParent {
    width: 5112px;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
    .barrageBox {
      position: absolute;
      height: 100%;
      padding-top: 100px;
      top: 0;
      left: 5112px;
      transform: translate3d(0,0,0);
      .barrageWrap {
        height: 446px;
        white-space: nowrap;
        position: relative;
        display: inline-block;
        &:first-child {
          margin-bottom: 60px;
        }
        .barrage {
          display: inline-block;
          width: 590px;
          color: #fff;
          position: relative;
          .barrageChild {
            display: inline-block;
            max-width: 590px;
            padding: 11px 102px 48px 62px;
            background-repeat: no-repeat;
            background-size: 100% 100%;
            position: relative;
          }
          &.barrage1 .barrageChild {
            background-image: url("../img/barrage/barrageBg1.png");
          }
          &.barrage2 .barrageChild {
            background-image: url("../img/barrage/barrageBg2.png");
          }
          &.barrage3 .barrageChild {
            background-image: url("../img/barrage/barrageBg3.png");
          }
          &.barrage4 .barrageChild {
            background-image: url("../img/barrage/barrageBg4.png");
          }
          &.barrage5 .barrageChild {
            background-image: url("../img/barrage/barrageBg5.png");
          }
          &.barrage6 .barrageChild {
            background-image: url("../img/barrage/barrageBg6.png");
          }
          .barrageUser {
            height: 74px;
            line-height: 74px;
            font-size: 30px;
          }
          .avatarBox {
            width: 96px;
            height: 96px;
            border: 4px solid #fff;
            border-radius: 50%;
            overflow: hidden;
            top: -48px;
            left: -48px;
            img {
              width: 88px;
              height: 88px;
            }
          }
          p {
            max-height: 146px;
            line-height: 46px;
            font-size: 30px;
            overflow: hidden;
            white-space: normal;
            word-break: break-all;
            letter-spacing: 5px;
          }
        }
      }
    }
  }
}

@keyframes lineLeft {
  0% {
    transform: rotate(-45deg) translate(0,0);
    opacity: .6;
  }
  50% {
    transform: rotate(-45deg) translate(18px,926px);
    opacity: 1;
  }
  100% {
    transform: rotate(-45deg) translate(36px,1852px);
    opacity: .1;
  }
}
@keyframes lineLeft1 {
  0% {
    transform: rotate(-45deg) translate(0,0);
    opacity: .6;
  }
  50% {
    transform: rotate(-45deg) translate(14px,726px);
    opacity: 1;
  }
  100% {
    transform: rotate(-45deg) translate(28px,1452px);
    opacity: .1;
  }
}
@keyframes lineLeft2 {
  0% {
    transform: rotate(-45deg) translate(0,0);
    opacity: .6;
  }
  50% {
    transform: rotate(-45deg) translate(16px,726px);
    opacity: 1;
  }
