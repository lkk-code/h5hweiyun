  }
}

@keyframes lineRight {
  0% {
    transform: rotate(45deg) translate(0,0);
    opacity: .6;
  }
  50% {
    transform: rotate(45deg) translate(-18px,926px);
    opacity: 1;
  }
  100% {
    transform: rotate(45deg) translate(-36px,1852px);
    opacity: .1;
  }
}
