    opacity: .1;
  }
}
@keyframes lineLeft3 {
  0% {
    transform: rotate(-45deg) translate(0,0);
    opacity: .6;
  }
  50% {
    transform: rotate(-45deg) translate(18px,926px);
    opacity: 1;
  }
