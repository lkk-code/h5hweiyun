    /*过滤表情*/
    function filteremoji(data, cb) {
        var result;
        cb = cb || function () {
        };
        var ranges = [
            '\ud83c[\udf00-\udfff]',
            '\ud83d[\udc00-\ude4f]',
            '\ud83d[\ude80-\udeff]',
            '\ud83d[\u2000-\u2fff]',
            '\ud83d[\udc00-\udfff]'
        ];
        result = data.replace(new RegExp(ranges.join('|'), 'g'), '');
        cb(result)
    }

//首页弹幕发送按钮过滤表情
    $('.data_box').children('.foter_box').children('.send').click(function () {
