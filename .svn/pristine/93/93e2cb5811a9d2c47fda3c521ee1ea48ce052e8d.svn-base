//获取所有的Box
function chegPage(index) {
    var boxClass = '.data_box' + index;
    if (index == 1) {
        boxClass = '.data_box';
    }
    $('.Box').css('display','none');
    // $(boxClass).css('display', 'block');
    $('.Box').fadeOut();
    $(boxClass).fadeIn();
}
//调用方法
chegPage(1);

