
.bkg{
    height:100%;
    width: 100%;
    position: absolute;
    top: 0;
    left:0;
    z-index: -1!important;
}

.bkg .star{
    display: inline-block;
    height: 20px;
    width: 20px;
    background: #5c1596;
    border-radius: 50%;
    position: absolute;
    left: 40%;
    top: 20%;
    opacity: 0.5;
    transform: scale(0.8);
    animation: startTwinkle 1000ms;
    animation-fill-mode: forwards;
    animation-iteration-count: infinite;
    animation-direction:alternate;
    animation-timing-function: ease-in-out;
}
@keyframes  startTwinkle{
    from{transform: scale(.8);opacity: 0.5}
    to{transform: scale(1);opacity: 1}
}



.data_box, .data_box2, .data_box3, .data_box4, .data_box5{
    background: none;
}
.data_box .bkg, .data_box5 .bkg{
    background: url("../img/image/bkg_red.png");
}
.data_box .bkg .powder:nth-child(1),
.data_box5 .bkg .powder:nth-child(1){
    width: 100%;
    height:50%;
    background: url("../img/image/powder1.png") no-repeat;
    background-size: 100%;
