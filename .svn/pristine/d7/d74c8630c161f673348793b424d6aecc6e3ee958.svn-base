// 最大字符
    var maxCount = 200;  // 最高字数，这个值可以自己配置
    $("#textVa").on('keyup', function() {
        var len = getStrLength(this.value);
        $("#count").html(maxCount-len);
    })

// 中文字符判断
    function getStrLength(str) {
        var len = str.length;
        var reLen = 0;
        for (var i = 0; i < len; i++) {
            if (str.charCodeAt(i) > 27 || str.charCodeAt(i) < 126) {
                // 全角
                reLen += 1;
            } else {
                reLen++;
            }
        }
        return reLen;
    }



