/*邮箱验证*/
function checkEmail(email, cb) {
    var result;
    var reg = /^([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+@([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+\.[a-zA-Z]{2,3}$/; //正则表达式
    // console.log(obj.innerText);
    if (email == "") { //输入不能为空
        result = false;
    } else if (!reg.test(email)) { //正则验证不通过，格式不对
        result = false;
    } else {
        result = true;
    }
    cb(result);
}

