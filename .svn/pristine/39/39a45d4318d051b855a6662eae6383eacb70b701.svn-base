/*邮箱验证*/
function checkEmail(email, cb) {
    var result;
    var reg = /^([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+@([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+\.[a-zA-Z]{2,3}$/; //正则表达式
    // console.log(obj.innerText);
    if (email == "") { //输入不能为空
        result = false;
    } else if (!reg.test(email)) { //正则验证不通过，格式不对
        result = false;
    } else {
        result = true;
    }
    cb(result);
}

//登陆
function login() {
    $.ajax({
        url: host + "/api/index/index",
        data: "",
        type: "GET",
        headers: {
            "X-Requested-With": "XMLHttpRequest"
        },
        // dataType: 'jsonp',
        success: function (res) {
            console.log(res.url);
            if (res.url !== '') {
                window.location = res.url;
            } else if (res.url == '') {
                if (res.data.status == 1) {
                    chegPage(5);
                } else if (res.data.status == 0) {
                    chegPage(1);
                }
            }

        },
        error: function (e) {
        }
    })
}

// 发送弹幕
function sendBarrage(text) {
    $.ajax({
        url: host + "/api/index/barrage",
        data: {
            content: text
        },
        type: "POST",
        headers: {
            "X-Requested-With": "XMLHttpRequest"
        },
        success: function (res) {
            if (res.code == 1) {
                console.log(res);

            }
        }
    })

}

//提交信内容
function Submission(email, cb) {
    $.ajax({
        url: host + "/api/index/addletter",
        data: {
            content: Context,
            email: email
        },
        type: "POST",
        headers: {
            "X-Requested-With": "XMLHttpRequest"
        },
        // dataType: 'jsonp',
        success: function (res) {
            if (res.code == 1) {
                cb(res)
            }
        }
    })
}


