.barrageBg {
  width: 8192px;
  height: 1152px;
  background: url("../img/barrage/bg.jpg");
  background-size: 100% 100%;
  .code {
    width: 1540px;
    padding-top: 148px;
    top: 0;
    &.code1 {
      left: 0;
    }
    p {
      width: 406px;
      margin-left: 66px;
      font-size: 48px;
      color: #000;
    }
    .codeBox {
      width: 648px;
      height: 643px;
      margin: 0 auto;
      background: url("../img/barrage/code1.png");
      padding: 238px 0 0 78px;
      img {
        width: 360px;
        height: 360px;
      }
    }
  }
}
